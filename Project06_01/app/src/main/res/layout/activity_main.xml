<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Chronometer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer1"
        android:format="에약에 걸린시간 %s"
        android:gravity="center"
        android:textSize="20sp"/>
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:text="예약 시작"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/chronometer1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgroup"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/start">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Calendarview"
            android:text="날짜 설정(CalendarView)" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 설정(Time Picker)"
            android:id="@+id/TimePicker" />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framel"
        android:layout_marginTop="20dp"
        android:gravity = "center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgroup">

        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:timePickerMode="spinner"
            android:id="@+id/TimePicker1" />

        <CalendarView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/Calendar" />

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:text="예약완료"
        android:layout_marginTop="145dp"
        app:layout_constraintTop_toBottomOf="@+id/framel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="158dp"
        android:text="예약현황"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/framel" />


</androidx.constraintlayout.widget.ConstraintLayout>