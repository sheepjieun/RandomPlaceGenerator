<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/select_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="카테고리 설정"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/select_category_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/select_category_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/category"
        android:translationZ="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selected_region_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="서울 전체"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/select_category_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="#D0B4B4"/>

        <ImageButton
            android:id="@+id/btn_restaurant"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_restaurant"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_cafe"
            app:layout_constraintTop_toTopOf="@+id/line"/>
        <ImageButton
            android:id="@+id/btn_cafe"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_cafe"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_restaurant"
            app:layout_constraintTop_toTopOf="@+id/line"/>
        <ImageButton
            android:id="@+id/btn_walk"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_walk"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_cafe"
            app:layout_constraintTop_toBottomOf="@+id/btn_restaurant"/>
        <ImageButton
            android:id="@+id/btn_culture"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_culture"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_restaurant"
            app:layout_constraintTop_toBottomOf="@+id/btn_cafe"/>
        <ImageButton
            android:id="@+id/btn_shopping"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_shopping"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_cafe"
            app:layout_constraintTop_toBottomOf="@+id/btn_walk"/>
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_play"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_restaurant"
            app:layout_constraintTop_toBottomOf="@+id/btn_culture"/>
        <ImageButton
            android:id="@+id/btn_vacation"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_vacation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_play"
            app:layout_constraintTop_toBottomOf="@+id/btn_shopping"/>

    <View
        android:id="@+id/line2"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_vacation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="#D0B4B4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="선택한 카테고리"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintBottom_toBottomOf="@id/btn_reset"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/white"
        android:text="초기화"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/layout_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="103dp"
        android:layout_height="43dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_next"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>