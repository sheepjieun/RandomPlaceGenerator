<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/mapLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mapImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/exam_restaurant1"/>

    <TextView
        android:id="@+id/mapName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/mapImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mapLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="28dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/mapImageView"
        app:layout_constraintTop_toBottomOf="@+id/mapName" />

    <TextView
        android:id="@+id/mapCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/mapLocation"
        app:layout_constraintTop_toBottomOf="@+id/mapLocation" />

    <ImageView
        android:id="@+id/selectNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_select1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>