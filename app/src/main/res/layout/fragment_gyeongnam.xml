            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="창원시"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnGyeongnamTongyeong"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="통영시"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnGyeongnamHadong"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="하동군"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnGyeongnamHaman"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="함안군"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnGyeongnamHamyang"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="함양군"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnGyeongnamHapcheon"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="합천군"
            android:textSize="13dp"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
