<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="추천"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/select_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/select_category_img"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:layout_marginTop="30dp"
        android:text="카테고리 설정"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/select_category_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/category"
        android:translationZ="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <TextView
        android:id="@+id/selected_region_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:layout_marginTop="30dp"
        android:text="경기도 구리시"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/select_category_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="#D0B4B4"/>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp">
        <ImageButton
            android:id="@+id/btn_restaurant"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_restaurant_clicked" />
        <ImageButton
            android:id="@+id/btn_cafe"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_cafe" />
        <ImageButton
            android:id="@+id/btn_walk"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_walk" />
        <ImageButton
            android:id="@+id/btn_culture"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_culture" />
        <ImageButton
            android:id="@+id/btn_shopping"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_shopping" />
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_play" />
        <ImageButton
            android:id="@+id/btn_vacation"
            android:layout_width="119dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_vacation" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@id/btn_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="ALL"
                android:textSize="13dp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_check"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0B4B4"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="한식"
                android:textSize="13dp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_check"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0B4B4"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="중식"
                android:textSize="13dp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_check"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0B4B4"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="일식"
                android:textSize="13dp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_check"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:background="#D0B4B4"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="양식"
                android:textSize="13dp"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_check"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="103dp"
        android:layout_height="43dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_layout"/>



</androidx.constraintlayout.widget.ConstraintLayout>