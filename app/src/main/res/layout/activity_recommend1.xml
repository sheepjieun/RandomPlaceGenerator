<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/select_region_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:text="지역 선택"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/select_region_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="#D0B4B4"/>

    <ScrollView
        android:id="@+id/region1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_seoul"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="서울"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler" />
            <Button
                android:id="@+id/btn_busan"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="부산"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler" />
            <Button
                android:id="@+id/btn_incheon"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="인천"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler" />
            <Button
                android:id="@+id/btn_daegu"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="대구"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>
            <Button
                android:id="@+id/btn_gwangju"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="광주"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler" />

            <Button
                android:id="@+id/btn_daejeon"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="대전"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler" />

            <Button
                android:id="@+id/btn_ulsan"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="울산"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_gyeonggi"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경기"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_gangwon"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="강원"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_chungbuk"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="충북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_chungnam"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="충남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_jeonbuk"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="전북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_jeonnam"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="전남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_gyeongbuk"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_gyeongnam"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_jeju"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="제주"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>

            <Button
                android:id="@+id/btn_sejong"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="세종"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:onClick="clickHandler"/>
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/region2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/region1">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>