<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="추천"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/select_region_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_marginTop="30dp"
        android:text="지역 선택"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/myLocation"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:gravity="right"
        android:text="내 위치"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line" />

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mylocation"
        android:translationZ="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/myLocation"
        app:layout_constraintTop_toTopOf="@+id/myLocation" />
    
    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/select_region_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="#D0B4B4"/>

    <ScrollView
        android:id="@+id/region1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="서울"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="부산"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="인천"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="대구"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="광주"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="대전"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="울산"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경기"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="강원"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="충북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="충남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="전북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="전남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경북"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="경남"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="제주"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="세종"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/region2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/line"
        app:layout_constraintLeft_toRightOf="@+id/region1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="서울 전체"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="강남구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="강서구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="관악구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="구로구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="도봉구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="동대문구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="동작구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="마포구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="서대문구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="성동구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="성북구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="은평구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="종로구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="중구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="송파구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="중랑구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="양천구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="서초구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="노원구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="광진구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="강북구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="금천구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="용산구"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>