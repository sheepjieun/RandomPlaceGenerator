<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="회원가입"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="390dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="#D0B4B4"/>

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="이메일"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="이메일 입력"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <Button
        android:id="@+id/btn_checkId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복 확인"
        app:layout_constraintRight_toRightOf="@+id/et_id"
        app:layout_constraintTop_toTopOf="@+id/et_id" />

    <TextView
        android:id="@+id/text_pass"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="비밀번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/text_id"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_id"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>
    <EditText
        android:id="@+id/et_retryPassword"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="비밀번호 재입력"
        android:inputType="textPassword"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <TextView
        android:id="@+id/text_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="휴대폰 번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_retryPassword"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_phoneNumber"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_retryPassword"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="휴대폰 번호 입력"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="닉네임"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_phoneNumber"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_phoneNumber"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="닉네임 입력"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="비밀번호 힌트"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_nickname"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_hint"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nickname"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="힌트 질문 입력"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <TextView
        android:id="@+id/text_hint_answer"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="힌트 답변"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@id/et_hint"
        android:layout_marginTop="26dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/et_hintAnswer"
        android:layout_width="280dp"
        android:layout_height="45dp"
        app:layout_constraintLeft_toRightOf="@+id/text_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_hint"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:hint="힌트 답변 입력"
        android:textSize="15dp"
        android:textColorHint="#B4AFAF"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/terms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_hintAnswer"
        android:layout_marginTop="25dp"/>

    <ImageButton
        android:id="@+id/btn_registerOK"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/btn_join" />




</androidx.constraintlayout.widget.ConstraintLayout>