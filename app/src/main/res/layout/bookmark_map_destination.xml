<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:background="@drawable/layout_destination_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 현재 목적지 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_line"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 목적지"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/destinationImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/exam_ramen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/destinationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="멘야산디이메"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/destinationImage"
        app:layout_constraintTop_toTopOf="@+id/destinationImage"/>

    <TextView
        android:id="@+id/destinationLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="60dp"
        android:text="홍대"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@id/destinationImage"
        app:layout_constraintTop_toTopOf="@+id/destinationImage" />


    <TextView
        android:id="@+id/destinationCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="92dp"
        android:text="음식점"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/destinationImage"
        app:layout_constraintTop_toTopOf="@+id/destinationImage"
        android:textColor="#888888"/>


</androidx.constraintlayout.widget.ConstraintLayout>