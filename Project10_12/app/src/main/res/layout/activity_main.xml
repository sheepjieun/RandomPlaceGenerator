<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic2"
        app:layout_constraintLeft_toRightOf="@+id/iv1"
        app:layout_constraintRight_toLeftOf="@+id/iv3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic5"
        app:layout_constraintLeft_toRightOf="@+id/iv4"
        app:layout_constraintRight_toLeftOf="@+id/iv6"
        app:layout_constraintTop_toBottomOf="@+id/iv2" />

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv3" />

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv4" />

    <ImageView
        android:id="@+id/iv8"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic8"
        app:layout_constraintLeft_toRightOf="@+id/iv7"
        app:layout_constraintRight_toLeftOf="@+id/iv9"
        app:layout_constraintTop_toBottomOf="@+id/iv5" />

    <ImageView
        android:id="@+id/iv9"
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:src="@drawable/pic9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv6" />


    <Button
        android:id="@+id/btnResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투표 종료"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv7" />

</androidx.constraintlayout.widget.ConstraintLayout>